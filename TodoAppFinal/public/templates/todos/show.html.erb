<h1>{{todo.title}}</h1>
<strong>Comments</strong><br>

<ul id="todolist">
  <li ng-repeat="comment in commentList" ng-class="{editing: comment == editedComment}">
    <div>
      <label ng-dblclick = "editComment(comment)">{{comment.body}} </label>
      <button class="destroy" ng-click="removeComment(comment)" ></button>
    </div>
    <form ng-submit="saveEditsComment(comment)">
      <input class="edit" ng-trim="false" ng-model="comment.body">
    </form>
  </li>
</ul>

